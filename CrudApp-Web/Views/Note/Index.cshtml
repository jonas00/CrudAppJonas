@model IEnumerable<CrudApp_Core.Note>

@{
    ViewBag.Title = "Index";
}

<h2>Notes</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default btn-s" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            Actions
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-s" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-s" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-s" })
                @Html.ActionLink("Archive", "Set_Archive", new { id = item.Id }, new { @class = "btn btn-default btn-s" })
                @Html.ActionLink("Appointment", "Appointment", new { id =item.Id}, new {  @class = "btn btn-default btn-s"})
                @Html.ActionLink("Task", "Task", new { id = item.Id }, new { @class = "btn btn-default btn-s" })
            </td>
        </tr>
    }
</table>
